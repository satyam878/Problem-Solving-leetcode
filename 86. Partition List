class Solution {
    public ListNode partition(ListNode head, int x) {
        
        ListNode small=new ListNode(1);
        ListNode large=new ListNode(2);
        ListNode curr=head,sp=small,lp=large;
        
        while(curr!=null)
        {
            if(curr.val<x)
            {
                sp.next=curr;
                sp=sp.next;
            }
            else
            {
                lp.next=curr;
                lp=lp.next;
            }
            curr=curr.next;
        }
        lp.next=null;
        sp.next=large.next;
        head=small.next!=null ? small.next : large.next;
        
        return head;
    }
}
